          ]
        }
      },
      {
        "stone_tab_pages@smelt_recipe_book_page_panel_content_dx.smelt_recipe_book_panel_pages": {
          "$tab_page": "stone",
          "$number_right": "1",
          "$panel_content_1": "cris_blast_furnace_rb_conent_pages.stone_page_1",
          "$ignore_number_label": true,
          "$has_only_1_page": true,
          "$tab_mode": "other",
          "bindings": [
