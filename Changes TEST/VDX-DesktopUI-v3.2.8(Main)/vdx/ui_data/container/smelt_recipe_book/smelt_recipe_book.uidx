  "smoker_recipe_item_pages": {
    "type": "panel",
    "layer": 4,
    "controls": [
      {
        "all_tab_pages@smelt_recipe_book_page_panel_content_dx.smelt_recipe_book_panel_pages": {
          "$tab_page": "all",
          "$number_right": "1",
          "$panel_content_1": "cris_smoker_rb_conent_pages.all_page_1",
          "$ignore_number_label": true,
