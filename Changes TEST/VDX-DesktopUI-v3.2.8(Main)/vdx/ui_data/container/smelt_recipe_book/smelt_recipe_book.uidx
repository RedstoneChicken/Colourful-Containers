{
  "namespace": "smelt_recipe_book_desktop_dx",
  
  /*//// Button ////*/

  "layout_button_base@toggle_dx.toggle_panel": {
    "layer": 3,
    "size": [ 20, 18 ],
    "$toggle_name": "rb_toggle",
    "$unchecked_control": "$recipe_button_default",
    "$checked_control": "$recipe_button_default",
    "$unchecked_hover_control": "$recipe_button_highlighted",
    "$checked_hover_control": "$recipe_button_highlighted",
    "$is_custom_button": true,
    "$custom_from_button_id": "button.controller_back",
    "$custom_to_button_id": "button.menu_select"
  },

  "recipe_button_panel": {
    "type": "panel",
    "size": [ 20, 18 ],
    "bindings": [
      {
        "binding_type": "global",
        "binding_name": "(not #is_creative_mode)",
        "binding_name_override": "#visible"
      }
    ],
    "controls": [
      { 
        "recipe_book_layout_toggle@smelt_recipe_book_desktop_dx.layout_button_base": {
          "$tab_view_binding_name": "show_tab_toggle",
          "$toggle_group_forced_index": 1,
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "show_tab_toggle",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      { 
        "survival_layout_toggle@smelt_recipe_book_desktop_dx.layout_button_base": {
          "$tab_view_binding_name": "hide_tab_toggle",
          "$toggle_group_forced_index": 0,
          "$toggle_default_state": true,
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "show_tab_toggle",
              "source_property_name": "#toggle_state",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },

  "furnace_recipe_button_panel@smelt_recipe_book_desktop_dx.recipe_button_panel": {
    "$recipe_button_default": "recipe_book_textures_dx.furnace_button",
    "$recipe_button_highlighted": "recipe_book_textures_dx.furnace_button_highlighted"
  },

  "blast_furnace_recipe_button_panel@smelt_recipe_book_desktop_dx.recipe_button_panel": {
    "$recipe_button_default": "recipe_book_textures_dx.blast_furnace_button",
    "$recipe_button_highlighted": "recipe_book_textures_dx.blast_furnace_button_highlighted"
  },

  "smoker_recipe_button_panel@smelt_recipe_book_desktop_dx.recipe_button_panel": {
    "$recipe_button_default": "recipe_book_textures_dx.smoker_button",
    "$recipe_button_highlighted": "recipe_book_textures_dx.smoker_button_highlighted"
  },
  
