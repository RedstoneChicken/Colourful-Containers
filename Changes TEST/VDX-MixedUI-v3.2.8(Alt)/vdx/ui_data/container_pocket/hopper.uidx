{
  "namespace": "hopper_pocket_dx",
  
  /*//// Tabs ////*/

  "hopper_icon@container_panel_pocket_dx.item_image": { "texture": "textures/items/hopper" },

  "left_navigation_tabs": {
    "type": "stack_panel",
    "size": [ 32, "100%" ],
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "offset": [ 0, 0 ],
    "controls": [
      { "fill_panel": { "type": "panel", "size": [ 1, "fill" ] } },
      {
        "inventory_tab_panel": {
          "type": "panel",
          "size": [ 32, 28 ],
          "controls": [
            { 
              "inventory_tab@container_panel_pocket_dx.decorated_tab_panel_template": {
                "$tab_selected_texture": "inventory_pocket_textures_dx.tab_left_selected_1",
                "$tab_icon": "recipe_book_pocket_navigation_tabs_dx.survival_inventory_icon"
              }
            }
          ]
        }
      }
    ]
  },

  "right_navigation_tabs": {
    "type": "stack_panel",
    "size": [ 32, "100%" ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "offset": [ 0, 0 ],
    "controls": [
      { "fill_panel": { "type": "panel", "size": [ 1, "fill" ] } },
      {
        "hopper_tab_panel": {
          "type": "panel",
          "size": [ 32, 28 ],
          "controls": [
            { 
              "search_tab@container_panel_pocket_dx.decorated_tab_panel_template": {
                "$tab_anchor_side": "top_right",
                "$tab_selected_texture": "hopper_pocket_textures_dx.tab_right_selected_1",
                "$tab_icon": "hopper_pocket_dx.hopper_icon"
              }
            }
          ]
        }
      }
    ]
  },
  
  /*//// Inventory Panel ////*/

  "invnetory_left_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      { "background@inventory_pocket_textures_dx.inventory_bg_half": { "layer": 1 } },
      { "content@container_panel_pocket_dx.pocket_container_panel_template": { "layer": 10 } }
    ]
  },
  
  /*//// hopper Panel ////*/

  "hopper_right_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      { "hopper_bg@hopper_pocket_textures_dx.hopper_bg": { "layer": 1 } },
      {
        "title_label@label_dx.global_label": {
          "size": [ "default", 10 ],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "text_alignment": "center",
          "offset": [ 0, 10 ],
          "color": "$vdx_hopper_pocket_title_text_color",
          "text": "$container_title",
          "layer": 10,
          "shadow": "$vdx_container_text_shadow",
          "controls": [
            { "text_control@$vdx_hopper_pocket_title_text_control": { } }
          ]
        }
      },
      {
        "center_hold": {
          "type": "panel",
          "anchor_to": "top_left",
          "anchor_from": "top_left",
          "offset": [ 7, 27 ],
          "size": [ "100%-14px", "100%-34px" ],
          "controls": [
            {
              "main_hopper_panel": {
                "type": "panel",
                "size": [ 154, 42 ],
                "$pane_collection": "container_items",
                "$container_size": 5,
                "controls": [
                  { "hopper_panel@hopper_pocket_textures_dx.hopper_panel": { "layer": 10 } },
                  { "hopper_grid@hopper_pocket_dx.hopper_grid": { "layer": 10 } }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "hopper_grid": {
    "type": "panel",
    "size": [ 140, 28 ],
    "controls": [
      {
        "grid": {
          "type": "grid",
          "grid_rescaling_type": "horizontal",
          "size": [ 140, 28 ],
          "anchor_to": "top_left",
          "anchor_from": "top_left",
          "maximum_grid_items": "$container_size",
          "collection_name": "$pane_collection",
          "grid_item_template": "hopper_pocket_dx.hopper_container_item",
          "$item_collection_name": "$pane_collection"
        }
      }
    ]
  },

  "hopper_container_item@container_item_dx.container_item": {
    "$cell_image_size": [ 28, 28 ],
    "$lock_cell_slot_control": "pocket_textures_dx.lock_cell_slot",
    "$slot_highlight_image": "pocket_textures_dx.slot_highlight",
    "$background_images": "miscellaneous_dx.empty_panel",
    "size": [ 28, 28 ]
  },
  
  /*//// Main Panel ////*/

  "hopper_panel@container_panel_pocket_dx.double_container_panel": {
    "size": [ "100%", "100%-4px" ],
    "$left_tab_control": "hopper_pocket_dx.left_navigation_tabs",
    "$left_panel_control": "hopper_pocket_dx.invnetory_left_panel",
    "$center_panel_control": "hopper_pocket_textures_dx.center_fold",
    "$right_panel_control": "hopper_pocket_dx.hopper_right_panel",
    "$right_tab_control": "hopper_pocket_dx.right_navigation_tabs"
  },
  
  /*//// Screen ////*/

  "main_screen_content": {
    "type": "panel",
    "controls": [
      { "container_modules@container_panel_pocket_dx.container_modules": {} },
      { "hopper_panel@hopper_pocket_dx.hopper_panel": {} }
    ]
  },

  "center_screen": {
    "type": "panel",
    "controls": [
      { "main_screen_content@hopper_pocket_dx.main_screen_content": { } }
    ]
  },

  "full_screen": {
    "type": "panel",
    "controls": [
      { "screen_background@main_textures_dx.screen_background": { "layer": -10 } }
    ]
  }
}