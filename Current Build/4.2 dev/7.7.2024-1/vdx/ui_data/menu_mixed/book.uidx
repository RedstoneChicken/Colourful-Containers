{
  "namespace": "book_mixed_dx",

  /*//// Icons ////*/

  "book_edit_icon": {
    "type": "image",
    "size": [ 16, 16 ],
    "texture": "vdx/ui_textures/book/book_edit_icon"
  },

  "book_addtextpage_icon": {
    "type": "image",
    "size": [ 16, 16 ],
    "texture": "vdx/ui_textures/book/book_addtextpage_icon"
  },

  "book_shiftleft_icon": {
    "type": "image",
    "size": [ 16, 16 ],
    "texture": "vdx/ui_textures/book/book_shiftleft_icon"
  },

  "book_shiftright_icon": {
    "type": "image",
    "size": [ 16, 16 ],
    "texture": "vdx/ui_textures/book/book_shiftright_icon"
  },

  "book_delete_icon": {
    "type": "image",
    "size": [ 16, 16 ],
    "texture": "vdx/ui_textures/book/book_delete_icon"
  },

  /*//// Signing Panel ////*/

  "signing_book_panel": {
    "type": "panel",
    "size": [ 146, 180 ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "offset": [ 0, 3 ],
    "controls": [
      { "background@book_mixed_textures_dx.signing_book": { "layer": 1 } },
      {
        "title_label@label_dx.global_label": {
          "layer": 3,
          "text_alignment": "left",
          "size": [ 100, 14 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ 16, 30 ],
          "color": "$book_title_label_color",
          "text": "book.editTitle"
        }
      },
      {
        "title_text_box@book.title_text_box": {
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "$place_holder_control": "text_field_dx.text_field_place_holder_label",
          "constrain_to_rect": false,
          "max_length": 500,
          "controls": [
            { "custom_panel@text_field_dx.custom_text_field_panel": { } }
          ],
          "layer": 3,
          "size": [ 120, 10 ],
          "offset": [ 16, 46 ],
          "$text_box_text_color": "$book_title_color",
          "$color": [ 0, 0, 0 ],
          "$text_edit_box_label_anchor_point": "top_left",
          "$text_alignment": "left",
          "$text_edit_box_label_offset": [ 0, 0.5 ],
          "$text_background_default": "common.empty_panel",
          "$text_background_hover": "book_mixed_dx.main_text_edit_hover"
        }
      },
      {
        "author_stack_panel": {
          "type": "stack_panel",
          "size": [ 120, 10 ],
          "offset": [ 16, 56 ],
          "layer": 3,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "orientation": "horizontal",
          "controls": [
            {
              "author_label@label_dx.global_label": {
                "size": [ "default", 10 ],
                "text": "book.byAuthor",
                "color": "$book_author_label_color"
              }
            },
            {
              "separator_label@label_dx.global_label": {
                "size": [ "default", 10 ],
                "text": " ",
                "color": "$book_author_label_color"
              }
            },
            {
              "author_text_field@book.author_text_box": {
                "size": [ "fill", 10 ],
                "layer": 3,
                "$place_holder_control": "text_field_dx.text_field_place_holder_label",
                "constrain_to_rect": false,
                "max_length": 500,
                "controls": [
                  { "custom_panel@text_field_dx.custom_text_field_panel": { } }
                ],
                "$text_edit_box_label_size": [ "default", 10 ],
                "$text_edit_box_label_anchor_point": "top_left",
                "$text_alignment": "left",
                "$text_edit_box_label_offset": [ 0, 0.5 ],
                "$text_box_text_color": "$book_author_color",
                "$color": "$book_author_color",
                "$text_background_default": "common.empty_panel",
                "$text_background_hover": "book_mixed_dx.main_text_edit_hover"
              }
            }
          ]
        }
      },
      {
        "warning_label@label_dx.global_label": {
          "font_scale_factor": 1.0,
          "line_padding": -1.0,
          "layer": 3,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "offset": [ 16, 78.5 ],
          "color": "$book_warning_color",
          "size": [ "100%-30px", "100%" ],
          "text": "book.finalizeWarning"
        }
      }
    ]
  },

  /*//// Main Page Panel ////*/

  "main_text_edit_hover": {
    "type": "image",
    "texture": "vdx/ui_textures/global/main_border",
    "size": [ "100%+2px", "100%+2px" ],
    "color": [ 0.5, 0.5, 0.5 ],
    "anchor_from": "center",
    "anchor_to": "center"
  },
  
  "padded_button": {
    "type": "panel",
    "size": [ 20, 24 ],
    "$button_bind_type": "global",
    "controls": [
      {
        "button@book.base_button": {
          "size": [ 20, 20 ],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "controls": [
            { "default@button_dx.black_button_default": { } },
            { "hover@button_dx.black_button_hover": { } },
            { "pressed@button_dx.black_button_pressed": { } }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "$button_active",
        "binding_name_override": "#visible",
        "binding_type": "$button_bind_type",
        "binding_collection_name": "book_pages"
      },
      {
        "binding_type": "collection_details",
        "binding_collection_name": "book_pages"
      }
    ]
  },

  "main_book_page_panel": {
    "type": "panel",
    "size": [ 146, 180 ],
    "controls": [
      {
        "panel_content": {
          "type": "panel",
          "size": [ 146, 180 ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "layer": 5,
          "controls": [
            {
              "page_number_label@label_dx.global_label": {
                "color": "$book_page_number_color",
                "anchor_from": "$page_number_anchor",
                "anchor_to": "$page_number_anchor",
                "offset": "$page_number_offset",

                "localize": false,
                "text": "#page_number",
            
                "bindings": [
                  {
                    "binding_name": "#page_number",
                    "binding_type": "collection",
                    "binding_collection_name": "book_pages"
                  },
                  {
                    "binding_type": "collection_details",
                    "binding_collection_name": "book_pages"
                  }
                ]
              }
            },
            { 
              "text_field@book.page_text": {
                "$place_holder_control": "text_field_dx.text_field_place_holder_label",
                "controls": [
                  { "custom_panel@text_field_dx.custom_text_field_panel": { } }
                ],
                "$text_box_text_color": [ 0, 0, 0 ],
                "$locked_color": [ 0, 0, 0 ],
                "$color": [ 0, 0, 0 ],
                "$text_box_locked_text_color": [ 0, 0, 0 ],
                "$place_holder_text_color": [ 0, 0, 0 ],
                "$locked_text_alpha": 1.0,
                "constrain_to_rect": false,
                "$enable_shadow": false,
                "$text_background_locked": "$text_background_default",
                "size": [ 120, 128 ],
                "offset": "$text_field_offset",
                "anchor_from": "$text_field_anchor",
                "anchor_to": "$text_field_anchor",
                "$text_edit_box_label_offset": [ 0, 0.5 ],
                "$text_background_default": "common.empty_panel",
                "$text_background_hover": "book_mixed_dx.main_text_edit_hover",
                "max_length": 500,
            
                "$text_edit_box_focusable_binding_name": "#editable",
                "$text_edit_visible_binding_name": "#is_text_page",
                "$text_edit_visible_binding_collection_name": "book_pages",
                "$text_edit_visible_binding_type|default": "collection",
                "$enable_profanity_filter": true
              }
            },
            { 
              "page_buttons_panel": {
                "type": "stack_panel",
                "orientation": "vertical",
                "size": [ 20, "100%c" ],
                "offset": "$page_buttons_offset",
                "anchor_from": "$page_buttons_anchor",
                "anchor_to": "$page_buttons_anchor",
                "bindings": [
                  {
                    "binding_name": "#edit_controls_active",
                    "binding_name_override": "#visible",
                    "binding_type": "collection",
                    "binding_collection_name": "book_pages"
                  },
                  {
                    "binding_type": "collection_details",
                    "binding_collection_name": "book_pages"
                  }
                ],
                "controls": [
                  {
                    "delete_page@book_mixed_dx.padded_button": {
                      "$button_content": "book_mixed_dx.book_delete_icon",
                      "$pressed_button_name": "button.delete_page",
                      "$button_active": "#edit_controls_active"
                    }
                  },
                  {
                    "insert_text_page@book_mixed_dx.padded_button": {
                      "$button_content": "book_mixed_dx.book_addtextpage_icon",
                      "$pressed_button_name": "button.insert_text_page",
                      "$button_active": "#insert_page_active",
                      "$button_bind_type": "collection"
                    }
                  },
                  {
                    "swap_page_left@book_mixed_dx.padded_button": {
                      "$button_content": "book_mixed_dx.book_shiftleft_icon",
                      "$pressed_button_name": "button.swap_page_left",
                      "$button_active": "#swap_left_active",
                      "$button_bind_type": "collection"
                    }
                  },
                  {
                    "swap_page_right@book_mixed_dx.padded_button": {
                      "$button_content": "book_mixed_dx.book_shiftright_icon",
                      "$pressed_button_name": "button.swap_page_right",
                      "$button_active": "#swap_right_active",
                      "$button_bind_type": "collection"
                    }
                  }
                ]
              }
            },
            {
              "edit_page@book.base_button": {
                "size": [ 20, 20 ],
                "offset": "$page_buttons_offset",
                "anchor_from": "$page_buttons_anchor",
                "anchor_to": "$page_buttons_anchor",
                "$button_content": "book_mixed_dx.book_edit_icon",
                "$pressed_button_name": "button.edit_page",
                "$button_active": "#edit_button_active",
                "$button_bind_type": "collection",
                "controls": [
                  { "default@button_dx.black_button_default": { } },
                  { "hover@button_dx.black_button_hover": { } },
                  { "pressed@button_dx.black_button_pressed": { } }
                ]
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#page_visible",
              "binding_name_override": "#visible",
              "binding_type": "collection",
              "binding_collection_name": "book_pages"
            }
          ]
        }
      }
    ]
  },

  /*//// Panels ////*/

  "book_screen_content": {
    "type": "panel",
    "controls": [
      {
        "book_viewing_panel": {
          "type": "panel",
          "bindings": [
            {
              "binding_name": "#viewing",
              "binding_name_override": "#visible"
            }
          ],
          "controls": [
            {
              "main_book": {
                "type": "panel",
                "size": [ 292, 180 ],
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "offset": [ 0, 3 ],
                "controls": [
                  { "background@book_mixed_textures_dx.book": { "layer": 1 } },
                  { 
                    "page_backward_button@book.base_button": {
                      "size": [ 23, 13 ],
                      "offset": [ 18, -16 ],
                      "anchor_from": "bottom_left",
                      "anchor_to": "bottom_left",
                      "sound_name": "item.book.page_turn",
                      "sound_volume": 4.0,
                      "sound_pitch": 1.0,
                      "$pressed_button_name": "button.prev_page",
                      "$button_active": "#prev_page_button_active",
                      "layer": 6,
                      "controls": [
                        { "default@book_mixed_textures_dx.page_backward": {} },
                        { "hover@book_mixed_textures_dx.page_backward_highlighted": {} },
                        { "pressed@book_mixed_textures_dx.page_backward_highlighted": {} }
                      ]
                    }
                  },
                  { 
                    "page_forward_button@book.base_button": {
                      "size": [ 23, 13 ],
                      "offset": [ -23, -16 ],
                      "anchor_from": "bottom_right",
                      "anchor_to": "bottom_right",
                      "sound_name": "item.book.page_turn",
                      "sound_volume": 4.0,
                      "sound_pitch": 1.0,
                      "$pressed_button_name": "button.next_page",
                      "$button_active": "#next_page_button_active",
                      "layer": 6,
                      "controls": [
                        { "default@book_mixed_textures_dx.page_forward": {} },
                        { "hover@book_mixed_textures_dx.page_forward_highlighted": {} },
                        { "pressed@book_mixed_textures_dx.page_forward_highlighted": {} }
                      ]
                    }
                  },
                  {
                    "book_grid": {
                      "type": "grid",
                      "grid_dimensions": [ 2, 1 ],
                      "size": [ 292, 180 ],
                      "collection_name": "book_pages",
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "controls": [
                        { 
                          "left@book_mixed_dx.main_book_page_panel": {
                            "$text_field_offset": [ 16, 25 ],
                            "$text_field_anchor": "top_left",
                            "$page_number_anchor": "top_middle",
                            "$page_number_offset": [ 0, 12 ],
                            "$page_buttons_anchor": "left_middle",
                            "$page_buttons_offset": [ -32, 0 ],
                            "grid_position": [ 0, 0 ]
                          }
                        },
                        { 
                          "right@book_mixed_dx.main_book_page_panel": {
                            "$text_field_offset": [ -16, 25 ],
                            "$text_field_anchor": "top_right",
                            "$page_number_anchor": "top_middle",
                            "$page_number_offset": [ 0, 12 ],
                            "$page_buttons_anchor": "right_middle",
                            "$page_buttons_offset": [ 32, 0 ],
                            "grid_position": [ 1, 0 ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "butons_viewing_panels": {
                "type": "panel",
                "size": [ 200, 20 ],
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "offset": [ 0, 196 ],
                "controls": [
                  { 
                    "done_button_98@button_dx.main_button_98": {
                      "size": [ 98, 20 ],
                      "anchor_from": "top_right",
                      "anchor_to": "top_right",
                      "layer": 4,
                      "$button_text": "gui.done",
                      "$pressed_button_name": "button.book_exit",
                      "bindings": [
                        {
                          "binding_name": "#editable",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  },
                  { 
                    "done_button_200@button_dx.main_button_200": {
                      "size": [ 200, 20 ],
                      "anchor_from": "top_right",
                      "anchor_to": "top_right",
                      "layer": 4,
                      "$button_text": "gui.done",
                      "$pressed_button_name": "button.book_exit",
                      "bindings": [
                        {
                          "binding_name": "(not #editable)",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  },
                  { 
                    "sign_button@button_dx.main_button_98": {
                      "size": [ 98, 20 ],
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "layer": 4,
                      "$pressed_button_name": "button.sign_book",
                      "$button_text": "book.signButton",
                      "bindings": [
                        {
                          "binding_name": "#editable",
                          "binding_name_override": "#visible"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "book_signing_panel": {
          "type": "panel",
          "controls": [
            { "signing_book_panel@book_mixed_dx.signing_book_panel": { } },
            {
              "butons_signing_panels": {
                "type": "panel",
                "size": [ 200, 20 ],
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "offset": [ 0, 196 ],
                "controls": [
                  { 
                    "cancel_button@button_dx.main_button_98": {
                      "size": [ 98, 20 ],
                      "anchor_from": "top_right",
                      "anchor_to": "top_right",
                      "layer": 4,
                      "$button_text": "gui.cancel",
                      "$pressed_button_name": "button.book_exit"
                    }
                  },
                  { 
                    "finalize_button@button_dx.main_button_98": {
                      "size": [ 98, 20 ],
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "layer": 4,
                      "$pressed_button_name": "button.finalize",
                      "$button_text": "book.finalizeButton",
                      "bindings": [
                        {
                          "binding_name": "#editable",
                          "binding_name_override": "#visible"
                        },
                        {
                          "binding_name": "#finalize_button_enabled",
                          "binding_name_override": "#enabled"
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#signing",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  },

  /*//// Screen ////*/

  "center_screen": {
    "type": "panel",
    "controls": [
      { "book_screen_content@book_mixed_dx.book_screen_content": { } }
    ]
  },

  "full_screen": {
    "type": "panel",
    "controls": [
      { "screen_background@main_textures_dx.screen_background": { "layer": -10 } }
    ]
  }
}